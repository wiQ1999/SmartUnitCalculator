@page
@model SmartUnitCalculator.Pages.LogInModel
@{
}

<h1>Zaloguj się</h1>

<form method="post">
        <table class="table">
            <tr>
                <td scoop="row">Username</td>
                <td scoop="row"><input type="text" asp-for="Login.Login" /></td>
                <span class="text-danger" asp-validation-for="Login.Login"></span>
            </tr>
            <tr>
                <td scoop="row">Password</td>
                <td scoop="row"><input type="password" asp-for="Login.Password" /></td>
                <span class="text-danger" asp-validation-for="Login.Password"></span>
            </tr>
            <tr>
                <td scoop="row">&nbsp;</td>
                <td scoop="row"><input type="submit" value="Login" class="btn btn-primary" /></td>
            </tr>
        </table>
    </form>